<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>Amore - @ViewBag.Title</title>
<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
<meta name="keywords" content="" />
<meta name="description" content="" />
<link href="@Url.Content("~/Content/xhtmlcss/default.css")" rel="stylesheet" type="text/css" media="all" />
<link href="@Url.Content("~/Content/xhtmlcss/layout.css")" rel="Stylesheet" type="text/css" media="all" />
</head>
<body>
<div id="login" class="container">
    <form id="loginForm" method="post" >
        Username&nbsp; <input id="Username" type="text" style="width: 100px" class="loginTextbox" /> Password&nbsp; <input id="Password" type="text" style="width: 100px" class="loginTextbox" /><input type="submit" value="Log In" class="loginBtn" />
    </form> 
</div>
<div id="logo" class="container">
	
</div>
<div id="menu" class="container">
	<ul>		
		<li class="active">@Html.ActionLink("Home", "Index", "Home")</li>        
        <li class="active">@Html.ActionLink("Register (Free)", "Register", "Home")</li>
        @*<li class="active">@Html.ActionLink("Our Calendar", "OurCalendar", "Calendar")</li>*@
	</ul>
	<form id="search" method="get" action="">
		<fieldset>        
		    <input id="search-query" type="text" name="q" value="Search..." class="input-text" onfocus="if(this.value == 'Search...') this.value='';" />
		    <input id="search-submit" type="submit" value="Search" class="input-submit" />
		</fieldset>
	</form>
</div>
<div id="page" class="container one-column">	
    <div class="" style="padding: 40px 35px 35px 35px;">
		<section id="main">
            @RenderBody()
        </section>
	    <div class="clearfix">&nbsp;</div>
	</div>
</div>
<div id="box1" class="container">	        
    <div class="Bottom">        
        @if (IsSectionDefined("Bottom"))
        {        
            @RenderSection("Bottom", required: true)        
        }
        else
        {
            <div>Default Content</div>
        }
    </div>
    <div class="clearfix">&nbsp;</div>	
</div>
<div id="footer" class="container">
	<p>Copyright (c) 2009 Amore-App.com. All rights reserved. <a href="#">Privacy policy</a> | <a href="#">Legal information</a></p>
</div>
</body>
</html>
